<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cloudwatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appOrange</item>
        <item name="colorPrimaryVariant">@color/appOrangeDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appGreen</item>
        <item name="colorSecondaryVariant">@color/appOrangeDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/avenir_black/</item>
        <item name="android:fontFamily">@font/avenir_black</item>
    </style>


    <!--usage would be ?ttr/background_color-->
    <style name="AppTheme.Light" parent="Theme.Cloudwatch">
        <item name="app_background_color">@color/white</item>
        <item name="app_card_background">@color/appWhiteDark</item>
        <item name="app_btn_color_pressed">@color/appGreenDark</item>
        <item name="app_btn_color_default">@color/appGreen</item>
        <item name="app_et_background">@color/white</item>
        <item name="app_et_stroke_color_active">@color/appBlue</item>
        <item name="app_et_stroke_color_default">@color/appGreyDark</item>

        <item name="app_title_text_color">@color/appEigengrau</item>
        <item name="app_subtitle_text_color">@color/appEigengrau</item>

        <item name="app_progress_tint">@color/appOrange</item>

        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.Cloudwatch">
        <item name="app_background_color">@color/appBlackLight</item>
        <item name="app_card_background">@color/appGreyDark</item>
        <item name="app_btn_color_pressed">@color/appGreenDark</item>
        <item name="app_btn_color_default">@color/appGreen</item>
        <item name="app_et_background">@color/appGreyDark</item>
        <item name="app_et_stroke_color_active">@color/appBlue</item>
        <item name="app_et_stroke_color_default">@color/appGrey</item>

        <item name="app_title_text_color">@color/appEigengrau</item>
        <item name="app_subtitle_text_color">@color/appEigengrau</item>

        <item name="app_progress_tint">@color/appOrange</item>

        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
    </style>

    <!-- transitions for when the theme is changed -->
    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>