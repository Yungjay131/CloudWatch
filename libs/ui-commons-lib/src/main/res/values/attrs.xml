<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="theme">
        <attr name="app_background_color" format="color" />

        <attr name="app_card_background" format="color" />

        <attr name="app_btn_color_pressed" format="color" />
        <attr name="app_btn_color_default" format="color" />

        <attr name="app_et_background" format="color" />
        <attr name="app_et_stroke_color_active" format="color" />
        <attr name="app_et_stroke_color_default" format="color" />

        <attr name="app_title_text_color" format="color" />
        <attr name="app_subtitle_text_color" format="color" />

        <attr name="app_progress_tint" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomTextInputLayout">
        <attr name="ctil_hint" format="string" />
        <attr name="ctil_input_type" format="flags">
            <flag name="password" value="1" />
            <flag name="email" value="2" />
            <flag name="phoneNumber" value="4" />
            <flag name="name" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="cb_text" format="string" />
        <attr name="cb_enabled" format="boolean"/>
    </declare-styleable>
</resources>